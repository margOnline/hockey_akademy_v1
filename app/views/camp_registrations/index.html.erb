<%= redirect_to root_path unless current_parent %>
<% provide(:title, 'Camp Registrations') %>
<p>Your Registrations</p>
<% if @camp_registrations.empty? %>
  <p>You have no registrations.</p>
<% else %>
  <table>
    <tr>
      <th>Session</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Price</th>
    </tr>
    <% @camp_registrations.each do |cr| %>
      <tr>
        <th><%= cr.camp_session.title %></th>
        <th><%= cr.camp_session.start_time.strftime("%A, %d %b %Y %l:%M %p") %></th>
        <th><%= cr.camp_session.end_time.strftime("%A, %d %b %Y %l:%M %p") %></th>
        <th><%= cr.camp_session.price %></th>
        <th><%= link_to 'Delete', :confirm => "Are you sure?", :method => :delete, :id => cr.id %></th>
      </tr>
    <% end %>
  </table>
<% end %>
