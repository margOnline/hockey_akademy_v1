<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.label :first_name, 'First name' %><br />
    <%= f.text_field :first_name, autocomplete: "off" %>
  </div>
  <div><%= f.label :last_name, 'Last name' %><br />
    <%= f.text_field :last_name, autocomplete: "off" %>
  </div>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number, autocomplete: "off" %>
  </div>
    <div><%= f.label :home_phone_number %><br />
    <%= f.text_field :home_phone_number, autocomplete: "off" %>
  </div>
    <div><%= f.label :relation_to_player, 'Relationship to player' %><br />
    <%= f.text_field :relation_to_player, autocomplete: "off" %>
  </div>
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
