<% if @user.errors.any? %>
  <div id="error_text">
    <div class="alert_error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>* <%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>